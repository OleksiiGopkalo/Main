<h1>Реєстрація</h1>
<form method="post">
    <div>
        <label for="username">Ім'я користувача (до 50 символів):</label>
        <input type="text" id="username" name="Username" maxlength="50" required />
    </div>
    <div>
        <label for="fullname">ФІО (до 500 символів):</label>
        <input type="text" id="fullname" name="FullName" maxlength="500" required />
    </div>
    <div>
        <label for="password">Пароль (8-16 символів, 1 велика літера, 1 цифра, 1 знак):</label>
        <input type="password" id="password" name="Password" minlength="8" maxlength="16" required />
    </div>
    <div>
        <label for="confirmpassword">Підтвердження паролю:</label>
        <input type="password" id="confirmpassword" name="ConfirmPassword" minlength="8" maxlength="16" required />
    </div>
    <div>
        <label for="phone">Телефон (формат +380XXXXXXXXX):</label>
        <input type="tel" id="phone" name="Phone" pattern="^\+380\d{9}$" placeholder="+380XXXXXXXXX" required />
    </div>
    <div>
        <label for="email">Електронна адреса:</label>
        <input type="email" id="email" name="Email" required />
    </div>
    <div>
        <button type="submit">Зареєструватися</button>
    </div>
</form>
@if (ViewBag.Error != null)
{
    <div style="color: red; margin-top: 10px;">@ViewBag.Error</div>
}
